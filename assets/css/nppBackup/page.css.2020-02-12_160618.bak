body{
	background-color:blue;
	background-repeat: no-repeat;
	background-size: cover;
	background-attachment: scroll;
	padding:0;
    margin: 0;
    display: flex;
    justify-content: center;
	background-image: url('../img/meteo1.png');
}
main{
	
	width:100%;
	height:100vh;
	display: flex;
    background-repeat: no-repeat;
	background-position:center;
	
}
form{
   display: flex;
   justify-content: left;
   width:500px; /* largeur */
   height:650px; /*hauteur */
   border-radius: 4px;
   background-color:#FFF;
   padding: 6px;
   border: 1px solid #FFF;
   margin-top:150px;
   margin-left:400px;
   

}
input{
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
	display: flex;
    justify-content: center;
    margin-top:10px;
}

.bloca{
   display: flex;
}
.bloc2{
   margin-left:10px;
}
.bloc2>input{
   width:210px;
}
.bloc1>input{
   width:110px;
}
.bloc3>input, .bloc4>input, .bloc5>input, .bloc6>input{
	width:455px;
}
input[type=text]{
	width: 455px;
    border-radius: 4px;
    background-color: white;
