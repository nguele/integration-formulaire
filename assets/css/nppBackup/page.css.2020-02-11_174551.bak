body{
	background-image: url('../img/meteo1.png');
	background-repeat: no-repeat;
	background-size: cover;
	background-attachment: fixed;
}
form{
   position:absolute; /* disposition du formulaire*/
   top:35%; /*hauteur du formulaire*/
   left:40%;
   width:70%; /* largeur */
   height:70%; /*hauteur */
   margin-left:-150px; /* -largeur/2 */
   margin-top:-100px; /* -hauteur/2 */
   background-color:gray;
}
input,form{
	display: block;
	width: 50%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
}
input [type=password]{
    width: 100%;
    box-sizing: border-box;
    border: 2px solid #ccc;
    border-radius: 4px;
    font-size: 16px;
    background-color: white;
    background-image: url('../img/vue.png');
    background-position: 5px 5px; 
    background-repeat: no-repeat;
    padding: 12px 20px 12px 40px;
}
.bloc1{
	position:absolute; /* disposition du formulaire*/
   right:10%;
}
.bloc2{
	position:absolute; /* disposition du formulaire*/
   left:1%;
}
.bloc3, .bloc4, .bloc5, .bloc6{
position:absolute; /* disposition du formulaire*/
   
}