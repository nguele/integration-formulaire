body{
	background-image: url('../img/meteo1.png');
	background-repeat: no-repeat;
	background-size: cover;
	background-attachment: fixed;
}
form{
   position:absolute; /* disposition du formulaire*/
   top:35%; /*hauteur du formulaire*/
   left:40%;
   width:50%; /* largeur */
   height:70%; /*hauteur */
   margin-left:-150px; /* -largeur/2 */
   margin-top:-100px; /* -hauteur/2 */
   background-color:gray;
}
label, input, form{
	display: block;
}
input [type=password]{
    width: 100%;
    box-sizing: border-box;
    border: 2px solid #ccc;
    border-radius: 4px;
    font-size: 16px;
    background-color: white;
    background-image: url('../img/vue.png');
    background-position: 5px 5px; 
    background-repeat: no-repeat;
    padding: 12px 20px 12px 40px;
}
