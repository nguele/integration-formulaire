body{
	background-image: url('../img/meteo1.png');
	background-repeat: no-repeat;
	background-size: cover;
	background-attachment: fixed;
	padding:0;
    margin: 0;
    display: flex;
    justify-content: center;
}
form{
   display: flex;
   justify-content: center;
   top:90%; /*hauteur du formulaire*/
   left:40%;
   width:100%; /* largeur */
   height:90%; /*hauteur */
   margin-left:-150px; /* -largeur/2 */
   margin-top:-100px; /* -hauteur/2 */
   background-color:#FFF;
}
input,form{
	display:flex;
	width: 50%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
	display: flex;
   justify-content: center;
}
input [type=password]{
    width: 100%;
    box-sizing: border-box;
    border: 2px solid #ccc;
    border-radius: 4px;
    font-size: 16px;
    background-color: white;
    background-image: url('../img/vue.png');
    background-position: 5px 5px; 
    background-repeat: no-repeat;
    padding: 12px 20px 12px 40px;
}
.bloc1{
	display: flex;
   justify-content: center; /* disposition du formulaire*/
   right:10%;
}
.bloc2{
	 display: flex;
   justify-content: center;/* disposition du formulaire*/
   left:1%;
}
.bloc3, .bloc4, .bloc5, .bloc6{
   display: flex;
   justify-content: center; /* disposition du formulaire*/
   
}
